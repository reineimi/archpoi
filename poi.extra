#!/bin/sh
echo "Poi >> Good to see you again! Let's finish configuration";

sudo pacman -Syy;

git clone https://github.com/yeyushengfan258/Reversal-icon-theme.git;
cd Reversal-icon-theme;
sh install.sh;
cd && rm -rf "Reversal-icon-theme";
gsettings set org.gnome.desktop.interface icon-theme "Reversal";

git clone https://aur.archlinux.org/qimgv.git;
cd qimgv && makepkg -si;
cd && rm -rf qimgv;

printf '\nHave a good time!\n(https://github.com/reineimi/archpoi)\n'
rm -f poi.extra;
